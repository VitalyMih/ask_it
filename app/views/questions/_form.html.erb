<%= form_with model: @question do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, minlength: '2', required: true, placeholder: 'Enter title' %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, minlength: '2', required: true, placeholder: 'Enter body' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
